{
  "Service": {
    "Name": "Kios",
    "ServerUrl": "http://localhost:6000"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Console": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "FormatterName": "json",
    "FormatterOptions": {
      "SingleLine": true,
      "IncludeScopes": false,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss.fff ",
      "UseUtcTimestamp": true,
      "JsonWriterOptions": {
        "Indented": false
      }
    }
  },
  "Grafana": {
    "Loki": {
      "Url": "http://localhost:3100"
    },
    "Tempo": {
      "Url": "http://localhost:4317",
      "SourceName": "InternalSource",
      "ServiceName": "Kios"
    }
  },
  "IdentityServer": {
    "IdentityServerUrl": "https://sso-dev-integrate.vela.com.vn",
    "IdentityServerAudience": "Kios-api"
  },
  "Dapr": {
    "Masterdata": {
      "AppId": "master-data-api"
    },
    "Costing": {
      "AppId": "costing-api"
    },
    "RFI": {
      "AppId": "rfi-api"
    },
    "Partner": {
      "AppId": "partner-api"
    },
    "StateStore": "redis.statestore",
    "Host": "http://localhost:3500",
    "Grpc": "http://localhost:50001",
    "PubSub": "redismessagebus"
  },
  "ApiSettings": {    
    "Admin": "https://admin-service-dev3.vela.com.vn"
  },
  "ConnectionStrings": {
    "MySql": {
      "Contract": "Server=localhost;Port=3306;Database=local_kios;User Id=root;Password=my-secret-pw;"
    }
  },
  "Database": {
    "AllowClear": false // Only set it to true if have no exist database, it will ensured database cleared
  },
  "RemoteService": {
    //"Storage": "http://localhost:5500/api/v1/File"
    "Storage": "https://opex-dev3.vela.com.vn/storageservice-api/api/v1/File"
  }
}
